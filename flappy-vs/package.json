{
  "name": "flappy-vs",
  "version": "1.0.0",
  "description": "A Flappy Bird inspired game with single and versus modes.",
  "main": "src/main.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
  "test": "jest --runInBand",
  "test:watch": "jest --watch",
  "format": "prettier -w . || true"
  },
  "dependencies": {
    "vite": "^5.3.4"
  },
  "devDependencies": {
  "@types/node": "^22.5.0",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
  "typescript": "^5.5.4",
  "prettier": "^3.3.3"
  },
  "jest": {
    "transform": {
      ".+\\.(t|j)sx?$": [
        "ts-jest",
        {
      "tsconfig": "tsconfig.json"
        }
      ]
    },
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "roots": [
      "<rootDir>/tests"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "keywords": [
    "game",
    "flappy bird",
    "typescript",
    "html5"
  ],
  "author": "Your Name",
  "license": "MIT"
}
